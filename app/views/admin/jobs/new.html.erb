<div class="col-md-4 col-md-offset-4">
  <h2>新增职缺</h2>
  <hr>

  <%= simple_form_for [:admin, @job] do |f| %>
    <div class="form-group">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :wage_upper_bound, :label => "工资上限" %>
      <%= f.input :wage_lower_bound, :label => "工资下限" %>
      <%= f.input :contact_email %>
      <%= f.input :is_hidden %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
  <% end %>

</div>
