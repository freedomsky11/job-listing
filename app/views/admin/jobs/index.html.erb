<div class="col-md-12">
  <div class="group">
    <%= link_to("Add a job", new_admin_job_path, class: "btn btn-default pull-right") %>
  </div>
  <table class="table table-hover">
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>
          <% if job.is_hidden %>
          <%= '(隐藏)' %>
          <% else %>
          <%= '(公开)' %>
          <% end %>
        </td>
        <td><%= link_to(job.title, admin_job_path(job)) %></td>
        <td>
          <% if current_user %>
          <%= link_to("Edit", edit_admin_job_path(job), class: "btn")%>
          <%= link_to("Delete", admin_job_path(job), class: "btn", method: :delete, data: { confirm: "Are you sure?" } )%>
          <% end %>
        </td>
        <td> <%= job.created_at %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
