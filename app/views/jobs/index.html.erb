<div class="col-md-12">
  <br>
            <div class="dropdown clearfix pull-right">
              <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                排序
                <b class="caret"></b>
              </button>
              <ul class="dropdown-menu">
                <li> <%= link_to("按照工资下限排序", jobs_path(:order => "by_lower_bound")) %> </li>
                <li> <%= link_to("按照工资上限排序", jobs_path(:order => "by_upper_bound")) %> </li>
                <li> <%= link_to("按照发表时间排序", jobs_path) %> </li>
              </ul>
            </div>
  <table class="table table-hover table-boldered table-striped">
    <thead>
      <tr>
        <td> 招聘岗位 </td>
        <td> 工资下限 </td>
        <td> 工资上限 </td>
        <td> 发布时间 </td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.wage_lower_bound %></td>
        <td><%= job.wage_upper_bound %></td>
        <td><%= job.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
