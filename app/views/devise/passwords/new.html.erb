      <div class="right">
        <div class="col-xs-12 col-sm-6 input">
          <h1>忘记密码</h1>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <!-- <%= f.error_notification %> -->

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "请输入你注册用的电子邮箱", error: '电子邮箱不能为空'%>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "给我发送密码重置链接", class: "registration-btn" %>
            </div>
            <br>
            <p style="color:red;">
              注意：如果一段时间后邮箱仍无法收到邮件，请联系客服人员为你解决。
            </p>
          <% end %>
          <hr>
          <div class="tip">
            还没有账号？去<span id="link"><a href="/users/sign_up">注册</a></span>
          </div>
          <div class="tip">
            已有账号？去<span id="link"><a href="/users/sign_in">登录</a></span>
          </div>
        </div>
      </div>

    </div>


  </div>
</div>
