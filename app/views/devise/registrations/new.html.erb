      <div class="right">
        <div class="col-xs-12 col-sm-6 input">
          <h1>注册</h1>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "电子邮箱" %>
              <%= f.input :password, required: true, label: false, placeholder: ("密码，至少包含#{@minimum_password_length}位英文或数字" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true , label: false, placeholder: "确认密码"%>
              <!-- 验证码 -->
            </div>
            <div class="form-actions">
              <%= f.button :submit, "注册", class: "registration-btn" %>
            </div>
          <% end %>
          <hr>
          <div class="tip">
            已有账号？去<span id="link"><a href="/users/sign_in">登录</a></span>
          </div>
        </div>
      </div>

    </div>


  </div>
</div>
